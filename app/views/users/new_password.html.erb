<% if @user.errors.any? %>
  <div class="error_messages">
    <h5>Form is invalid</h5>
    <ul>
      <% for message in @user.errors.full_messages %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>New Password</h1>
<%= form_for @user, url: update_password_path(@user), method: :patch do |form| %>
  <div>
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation %>
  </div>
  <div>
    <%= form.submit 'Submit' %>
  </div>  
<% end %>
